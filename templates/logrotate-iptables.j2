## /etc/logrotate.d/iptables
/var/log/iptables/iptables.log {
    rotate {{ harden_logrotate_days|int }}
    daily
    missingok
    notifempty
    delaycompress
    compress
    create 640 root adm
    postrotate
        invoke-rc.d rsyslog rotate > /dev/null
    endscript
}
